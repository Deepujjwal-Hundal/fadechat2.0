{
    "extends": "./tsconfig.json",
    "compilerOptions": {
        "module": "NodeNext",
        "moduleResolution": "NodeNext",
        "target": "ES2022",
        "noEmit": false,
        "outDir": "dist-server",
        "allowImportingTsExtensions": false,
        "isolatedModules": false,
        "types": [
            "node"
        ]
    },
    "include": [
        "server.ts"
    ],
    "exclude": [
        "node_modules",
        "dist",
        "vite.config.ts"
    ]
}